{
  "compilerOptions": {
    "allowJs": true,                
    "checkJs": false,              
    "outDir": "./dist",              
    "target": "ES6",               
    "module": "commonjs",            
    "moduleResolution": "node",     
    "esModuleInterop": true,       
    "strict": true,               
    "skipLibCheck": true,            
    "noImplicitAny": true           
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "bin/*.ts",
    "bin/*.js",
    "*.ts",     
    "*.js" 
  ],
  "exclude": [
    "node_modules",                
    "dist"                       
  ]
}